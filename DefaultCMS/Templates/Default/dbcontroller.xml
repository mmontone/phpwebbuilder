<templates>
 	<template class="DBController">
		<div>
			Version:<container id="version" />
		</div>
		<div>
			<container id="switch_label" /> <container id="select_version" />
			<input type="button" id="switch_version" value="Switch"/>
		</div>
		<h1>Execute SQL in Database:</h1>
		<textarea rows="10" cols="50" id="sql_comp">&amp;nbsp;</textarea>
		<div>
			Migration code:
		</div>
		<div>
			<textarea rows="10" cols="50" id="migration_code_area">&amp;nbsp;</textarea>
		</div>
		<input type="button" value="Execute SQL" id="exec_sql"/>
		<input type="button" value="Execute OQL" id="exec_oql"/>
		<input type="button" value="Update the Database" id="exec_update"/>
		<input type="button" value="Execute PHP" id="exec_php"/>
		<container id="sql_res"/>
		<h1>Check Table Structure</h1>
		<span>Step by step</span><input type="checkbox" value="Step by step" id="stepping"/>
		<input type="button" value="Check" id="check_tables"/>
	</template>
</templates>